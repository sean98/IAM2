<resources>
    <!--https://medium.com/over-engineering/setting-up-a-material-components-theme-for-android-fbf7774da739-->

    <!-- Base application theme. Theme.AppCompat.Light.NoActionBar-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDeepBlue</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>


    <style name="TextViewField" parent="Widget.AppCompat.EditText">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorDeepBlue</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textAlignment">viewStart</item>

    </style>

    <style name="TextViewFieldNoEdit" parent="TextViewField">
        <item name="android:enabled">false</item>
        <item name="android:focusable">false</item>
    </style>


    <style name="IconsStyle">
        <item name="android:tint">@color/colorDeepBlue</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>


    <style name="TimeLineStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="main_title_text_size">20sp</item>
        <item name="main_title_text_color">@android:color/black</item>
        <item name="main_title_visible">true</item>
        <item name="events_title_text_size">22sp</item>
        <item name="events_title_text_color">@android:color/black</item>
        <item name="events_descriptions_text_size">18sp</item>
        <item name="events_descriptions_text_color">@android:color/black</item>
        <item name="line_color">@android:color/darker_gray</item>
        <item name="line_width">2dp</item>
        <item name="icons_color">@android:color/black</item>
        <item name="icon_circles_color">@android:color/transparent</item>
    </style>

</resources>
